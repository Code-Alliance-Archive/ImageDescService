<h1>Books</h1>
<br/>

<table cellpadding="4" cellspacing="0" border="1">
  <tr>
    <th>ISBN</th>
    <th>ID</th>
    <th>Title</th>
    <th>Status</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.isbn %></td>
    <td><%= book.uid %></td>
    <td><%= book.title %></td>
    <td><%= book.status %></td>

  </tr>
<% end %>
</table>

