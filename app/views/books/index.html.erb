<h1>Books</h1>

<div class="flickr_pagination">
<%= will_paginate @books %>
</div>

<table cellpadding="4" cellspacing="0" border="1" width="100%">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>ISBN</th>
    <th>Status</th>
    <th>Added</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><a href="/reports/view_book?book_uid=<%= book.uid %>"><%= book.uid %></a></td>
    <td><a href="/edit_book/edit?book_uid=<%= book.uid %>"><%= book.title %></a></td>
    <td><%= book.isbn %></td>
    <td><%= book.status %></td>
    <td width="100px"><%= book.created_at.to_s(:poet_default) %></td>

  </tr>
<% end %>
</table>

<div class="flickr_pagination">
<%= will_paginate @books %>
</div>

