<h1>Listing images</h1>

<table>
  <tr>
    <th>Book</th>
    <th>Image</th>
    <th>Isbn</th>
    <th>Page number</th>
    <th>Sequence number</th>
    <th>Caption</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.book_id %></td>
    <td><%= image.image_id %></td>
    <td><%= image.isbn %></td>
    <td><%= image.page_number %></td>
    <td><%= image.sequence_number %></td>
    <td><%= image.caption %></td>
    <td><%= image.url %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

