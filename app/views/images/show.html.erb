<p id="notice"><%= notice %></p>

<p>
  <b>Book:</b>
  <%= @image.book_id %>

  <b>Image:</b>
  <%= @image.image_id %>
</p>

<p>
  <b>Isbn:</b>
  <%= @image.isbn %>

  <b>Page number:</b>
  <%= @image.page_number %>

  <b>Sequence number:</b>
  <%= @image.sequence_number %>
</p>

<p>
  <b>Caption:</b>
  <%= @image.caption %>
</p>

<p>
    <img src="<%= @image.url %>" />
</p>


<%= form_for([@image, @image.descriptions.build]) do |f| %>


  <div class="field">
    <%= f.text_area :description, :rows=>10, :value=>@last_desc.description %>

  </div>

  <div class="actions">
    <%= f.submit :value=>"update description" %>
  </div>
<% end %>


<%= link_to 'Edit', edit_image_path(@image) %> |
