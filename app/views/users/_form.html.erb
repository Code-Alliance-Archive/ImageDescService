  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <% if @user.new_record? %>
    <%= f.input :username %>
  <% end %>
  <%= f.input :geo_city,  :label => 'City' %>
  <%= f.input :geo_state,  :label => 'State' %>
  <%= f.input :zip_code %>
  <%= f.input :email %>
